<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".presentation.ui.true_false.screens.TrueFalseFragment">

<ImageView
    android:id="@+id/img_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:src="@drawable/ic_timer"/>
<Chronometer
    android:id="@+id/title_timer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/img_time"
    app:layout_constraintTop_toTopOf="@id/img_time"
    app:layout_constraintBottom_toBottomOf="@id/img_time"
    android:layout_marginStart="16dp"
    android:textColor="@color/white"
    android:textSize="16sp"/>
<TextView
    android:id="@+id/question_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/img_time"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="1"
    app:layout_constraintBottom_toBottomOf="@id/img_time"
    android:layout_marginEnd="16dp"
    android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/question_number"
        app:layout_constraintTop_toTopOf="@id/question_number"
        app:layout_constraintBottom_toBottomOf="@id/question_number"
        android:text="@string/question_title"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>